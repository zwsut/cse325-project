@using Microsoft.AspNetCore.Authorization
@page "/"

<PageTitle>All Inventory</PageTitle>

<div class="page-head">
    <h1 class="page-title">Kitchen</h1>
</div>

<section class="inv-section">
    <div class="section-head">
        <h2>Pantry</h2>
        <a class="btn-add" href="/items/new">Add Item</a>
    </div>

    <div class="table-wrap">
        <table class="inv-table">
            <thead>
                <tr>
                    <th class="col-id">ID</th>
                    <th>Item Name</th>
                    <th>Amount</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th class="col-actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in PantryItems)
                {
                    <tr>
                        <td class="id">@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Amount</td>
                        <td>@item.Category</td>
                        <td class="desc">@item.Description</td>
                        <td class="actions">
                            <a class="icon-btn" href="/inventory/pantry" title="Edit" aria-label="Edit">
                                ✎
                            </a>
                            <button class="icon-btn danger" type="button" title="Delete" aria-label="Delete">
                                🗑
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

<div class="spacer"></div>

<div class="page-head">
    <h1 class="page-title">Garage</h1>
</div>

<section class="inv-section">
    <div class="section-head">
        <h2>Food Storage</h2>
        <a class="btn-add" href="/items/new">Add Item</a>
