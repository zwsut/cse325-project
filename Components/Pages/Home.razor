@page "/"
@using System.Security.Claims
@using cse325_project.Models.Database
@using cse325_project.Services
@inject ISupabaseService SupabaseService
@inject IUserContextService UserContextService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>All Inventory</PageTitle>

@if (_loading)
{
    <p>Loading inventory...</p>
}
else if (!string.IsNullOrWhiteSpace(_error))
{
    <p class="simple-muted">Error: @_error</p>
}
else if (_pantrySections.Count == 0)
{
    <div class="empty-state">
        <p class="simple-muted">No inventory yet. Add a pantry/location and then add items.</p>
        <a class="btn-add" href="/inventory/edit">Edit Locations</a>
    </div>
}

else
{
    @if (!string.IsNullOrWhiteSpace(_message))
    {
        <div class="form-message">@_message</div>
    }

    @foreach (var pantry in _pantrySections)
    {
        <div class="page-head">
            <h1 class="page-title">@pantry.PantryName</h1>
        </div>

        <section class="inv-section">
            <div class="section-head">
                <h2>All Items</h2>
                <a class="btn-add" href="/items/new">Add Item</a>
            </div>

            <div class="table-wrap">
                <table class="inv-table">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Amount</th>
                            <th>Container</th>
                            <th>Description</th>
                            <th class="col-actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (pantry.Items.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="desc">No items in this pantry yet.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in pantry.Items)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Container</td>
                                    <td class="desc">@item.Description</td>
                                    <td class="actions">
                                        <button class="icon-btn"
                                                type="button"
                                                title="Add to shopping list"
                                                aria-label="Add to shopping list"
                                                @onclick="() => AddToShoppingListAsync(item)"
                                                disabled="@_busy">🛒</button>

                                        <a class="icon-btn" href="@item.EditHref" title="View" aria-label="View">✎</a>

                                        <button class="icon-btn danger"
                                                type="button"
                                                title="Delete"
                                                aria-label="Delete"
                                                @onclick="() => DeleteInventoryItemAsync(item)"
                                                disabled="@_busy">🗑</button>

                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </section>

        <div class="spacer"></div>
    }
}

@code {
    private bool _loading = true;
    private bool _busy;
    private string? _error;
    private string? _message;

    private AppUser? _currentUser;
    private Group? _currentGroup;
    private AppList? _shoppingList;

    private List<PantrySectionVm> _pantrySections = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await SupabaseService.InitializeAsync();

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var userIdClaim = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            var email = authState.User.FindFirst(ClaimTypes.Email)?.Value;

            (_currentUser, _currentGroup) = await UserContextService.GetForClaimsAsync(userIdClaim, email);
            if (_currentUser is null || _currentGroup is null)
            {
                _error = "You must be logged in.";
                return;
            }

            // Create/Get shopping list once for quick "Add to shopping list"
            _shoppingList = await GetOrCreateShoppingListAsync(_currentGroup.GroupId, _currentUser.UserId);

            // 1) pantries for this user's group
            var pantryRes = await SupabaseService.Client
                .From<Pantry>()
                .Where(p => p.GroupId == _currentGroup.GroupId)
                .Get();

            var pantries = (pantryRes.Models ?? new List<Pantry>())
                .OrderBy(p => p.Name)
                .ToList();

            if (pantries.Count == 0)
            {
                _pantrySections = new();
                return;
            }

            // 2) preload locations for each pantry (map location_id -> name + slug)
            var locationMap = new Dictionary<Guid, (string Name, string Slug, Guid PantryId)>();
            foreach (var pantry in pantries)
            {
                var locRes = await SupabaseService.Client
                    .From<PantryLocation>()
                    .Where(l => l.PantryId == pantry.PantryId)
                    .Get();

                foreach (var loc in (locRes.Models ?? new List<PantryLocation>()))
                {
                    if (loc.LocationId == Guid.Empty) continue;
                    var name = loc.Name ?? "Unnamed";
                    locationMap[loc.LocationId] = (name, ToSlug(name), pantry.PantryId);
                }
            }

            // 3) load inventory items per pantry, map catalog names
            var catalogRes = await SupabaseService.Client.From<CatalogItem>().Get();
            var catalog = (catalogRes.Models ?? new List<CatalogItem>())
                .ToDictionary(c => c.ItemId, c => c);

            var sections = new List<PantrySectionVm>();

            foreach (var pantry in pantries)
            {
                var invRes = await SupabaseService.Client
                    .From<InventoryItem>()
                    .Where(i => i.PantryId == pantry.PantryId)
                    .Get();

                var inv = invRes.Models ?? new List<InventoryItem>();

                var items = inv
                    .OrderByDescending(i => i.UpdatedAt)
                    .Select(i =>
                    {
                        var displayName =
                            i.CustomName ??
                            (i.ItemId.HasValue && catalog.TryGetValue(i.ItemId.Value, out var c)
                                ? (string.IsNullOrWhiteSpace(c.Brand) ? c.Name : $"{c.Name} ({c.Brand})")
                                : "Unnamed");

                        var amount = $"{i.Quantity} {i.Unit}".Trim();

                        var container = i.LocationId.HasValue && locationMap.TryGetValue(i.LocationId.Value, out var loc)
                            ? loc.Name
                            : "(no container)";

                        var editHref = i.LocationId.HasValue && locationMap.TryGetValue(i.LocationId.Value, out var loc2)
                            ? $"/inventory/{loc2.Slug}"
                            : "/inventory/edit";

                        return new InventoryRowVm(
                            i.InventoryId,
                            i.ItemId,
                            i.CustomName,
                            i.Unit,
                            displayName,
                            amount,
                            container,
                            i.Notes ?? "",
                            editHref
                        );
                    })
                    .ToList();

                sections.Add(new PantrySectionVm(pantry.Name ?? "Unnamed Pantry", items));
            }

            _pantrySections = sections;
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task AddToShoppingListAsync(InventoryRowVm inv)
    {
        if (_busy || _currentUser is null || _currentGroup is null) return;
        _busy = true;
        _message = null;

        try
        {
            // Ensure list exists (in case something changed)
            _shoppingList ??= await GetOrCreateShoppingListAsync(_currentGroup.GroupId, _currentUser.UserId);

            // Shopping list item: prefer catalog ItemId, else custom name
            var itemId = inv.ItemId;
            var customName = itemId is null ? (inv.CustomName ?? inv.Name).Trim() : null;

            if (itemId is null && string.IsNullOrWhiteSpace(customName))
            {
                _message = "Can't add: item has no name.";
                return;
            }

            var unit = string.IsNullOrWhiteSpace(inv.Unit) ? null : inv.Unit.Trim();

            await SupabaseService.Client
                .From<AppListItem>()
                .Insert(new AppListItem
                {
                    ListItemId = Guid.NewGuid(),
                    ListId = _shoppingList!.ListId,
                    ItemId = itemId,
                    CustomName = customName,
                    Quantity = 1,              // default for shopping list
                    Unit = unit,               // copy unit if present
                    IsChecked = false,
                    AddedByUser = _currentUser.UserId,
                    CreatedAt = DateTime.UtcNow
                });

            _message = "Added to shopping list.";
        }
        catch (Exception ex)
        {
            _message = $"Error adding to shopping list: {ex.Message}";
        }
        finally
        {
            _busy = false;
        }
    }

    private async Task<AppList> GetOrCreateShoppingListAsync(Guid groupId, Guid userId)
    {
        var res = await SupabaseService.Client
            .From<AppList>()
            .Where(l => l.GroupId == groupId)
            .Get();

        var existing = (res.Models ?? new List<AppList>())
            .FirstOrDefault(l => string.Equals(l.ListType, "shopping", StringComparison.OrdinalIgnoreCase)
                              && l.ArchivedAt == null);

        if (existing is not null) return existing;

        var inserted = await SupabaseService.Client
            .From<AppList>()
            .Insert(new AppList
            {
                ListId = Guid.NewGuid(),
                GroupId = groupId,
                Name = "Shopping List",
                ListType = "shopping",
                CreatedByUser = userId,
                CreatedAt = DateTime.UtcNow,
                ArchivedAt = null
            });

        return inserted.Models.First();
    }

    private static string ToSlug(string? value)
    {
        if (string.IsNullOrWhiteSpace(value)) return "inventory";
        var chars = value.Trim().ToLowerInvariant()
            .Select(c => char.IsLetterOrDigit(c) ? c : '-')
            .ToArray();

        var normalized = new string(chars);
        while (normalized.Contains("--")) normalized = normalized.Replace("--", "-");

        var slug = normalized.Trim('-');
        return string.IsNullOrWhiteSpace(slug) ? "inventory" : slug;
    }

    private sealed record PantrySectionVm(string PantryName, List<InventoryRowVm> Items);

    private sealed record InventoryRowVm(
        Guid InventoryId,
        Guid? ItemId,
        string? CustomName,
        string? Unit,
        string Name,
        string Amount,
        string Container,
        string Description,
        string EditHref
    );

    private async Task DeleteInventoryItemAsync(InventoryRowVm inv)
    {
        if (_busy) return;
        _busy = true;
        _message = null;

        try
        {
            // Delete the inventory row by primary key
            await SupabaseService.Client
                .From<InventoryItem>()
                .Where(i => i.InventoryId == inv.InventoryId)
                .Delete();

            // Update UI: remove from the in-memory list
            foreach (var section in _pantrySections)
            {
                var removed = section.Items.RemoveAll(x => x.InventoryId == inv.InventoryId);
                if (removed > 0) break;
            }

            _message = "Deleted.";
        }
        catch (Exception ex)
        {
            _message = $"Error deleting item: {ex.Message}";
        }
        finally
        {
            _busy = false;
        }
    }
}
